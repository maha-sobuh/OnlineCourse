@model List<Student>


<form method="get" asp-asp-controller="student" asp-action="search">
     Student Name
    <input type="text" name="searchKey" />
    <button type="submit">Search</button>
</form>

<table class="table table-bordered table-striped">
    <tr>
        <th>ID</th> 
        <th>Name</th> 
        <th>Course</th>
        <th></th>
    </tr>
    @foreach (var s in @Model)
    {
        <tr>
            <td>@s.StudentId</td>
            <td>@s.Name</td>
            <td>@s.Course.CourseName</td>
            <td> <a asp-action="Delete" asp-controller="Student" asp-route-id="@s.StudentId">Delete</a></td>
        </tr>
    }
</table>
<br />
<a asp-action="Add" asp-controller="Student">Add New Student</a>